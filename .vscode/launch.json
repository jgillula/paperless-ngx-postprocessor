    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Debug Processing",
            "type": "debugpy",
            "request": "launch",
            "program": "paperlessngx_postprocessor.py",
            "console": "integratedTerminal",
            "args": [ 
                "--verbose",
                "DEBUG",
                "--auth-token", 
                "<your auth token>", 
                "--paperless-api-url", 
                "https://<your paperless fqdn>/api", 
                "--rulesets-dir", 
                "<path to ruleset.d>", 
                "process", 
                "--document-id",
                "79"
            ]
        }
    ]
}